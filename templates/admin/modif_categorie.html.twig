{% extends 'backoffice.html.twig' %}

{% block title %}
    {{ parent() }}Modif_categorie
{% endblock %}
{% block titre %}
    Modification du nom d'une catégorie
{% endblock %}


{% block body %}

    <div class="container">
        {% for message in app.flashes('success') %}
            <div class="row mt-4">
                <div class="alert alert-success col-md-12 text-center">
                    {{ message }}
                </div>
            </div>
        {% endfor %}


        <div class="row justify-content-center mb-5">

            <div class="col-md-6">
                {{ form_start(formu) }}
                <div>
                    <label for="">Nom</label>
                    {{ form_row(formu.nom) }}
                </div>

                <div class="d-flex justify-content-center">
                    <div class="mt-4 me-4">
                        {{ form_row(formu.Valider) }}
                    </div>

                    <button class="btn btn-primary  mt-4 buttonretouralaliste ">
                        <a class="text-decoration-none text-white"  href="{{ path('liste_categorie') }}">Retour à la liste des catégories</a>
                    </button>
                </div>
                {{ form_end(formu) }}
            </div>
        </div>
    </div>


    <script>

        var loadFile = function (event) {
            var image = document.getElementById('image');

            image.src = URL.createObjectURL(event.target.files[0]);
        };

    </script>
{% endblock %}
