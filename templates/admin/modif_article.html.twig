{% extends 'backoffice.html.twig' %}
{% block title %}
    {{ parent() }}Modif_article
{% endblock %}
{% block titre %}
    Modifier un article
{% endblock %}



{% block body %}
    <div class="container">



        <div class="row justify-content-center mb-5">

            <div class="col-md-6">
                {{ form_start(formu) }}
                <div>
                    <label for="">Nom</label>
                    {{ form_row(formu.nom) }}
                </div>
                <div>
                    <label for="">Catégorie</label>
                    {{ form_row(formu.categorie) }}
                </div>

                <div>
                    <label for="">Prix</label>
                    {{ form_row(formu.prix) }}
                </div>
                <div>
                    <label for="">Référence</label>
                    {{ form_row(formu.ref) }}
                </div>
                <div>
                    <label for="">Description</label>
                    {{ form_row(formu.description) }}
                </div>

                <div class="mt-3 mb-3">
                    <label for="">Photo</label>
                    {{ form_row(formu.photoModif, {"attr": {"onChange": "loadFile(event)"}}) }}
                </div>
                <div class="row text-center ">

                    <div class="col-md-6">
                        <label for="">Photo actuelle</label>
                        <img src="{{ asset('photos/') }}{{ article.photo }}" width="300px"
                             alt="">
                    </div>

                    <div class="col-md-6 text-center">
                        <label for="">Nouvelle Photo</label>
                        <img id="image" style='width:300px'>

                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <div class="mt-4 me-4">
                        {{ form_row(formu.Valider) }}
                    </div>

                    <button class="btn btn-primary  mt-4 buttonretouralaliste ">
                        <a class="text-decoration-none text-white"  href="{{ path('liste_articles') }}">Retour à la liste d'articles</a>
                    </button>
                </div>
                {{ form_end(formu) }}
            </div>
        </div>
    </div>


    <script>

        var loadFile = function (event) {
            var image = document.getElementById('image');

            image.src = URL.createObjectURL(event.target.files[0]);
        };

    </script>
{% endblock %}

